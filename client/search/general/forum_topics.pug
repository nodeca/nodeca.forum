each result in self.results
  .search-general__item
    a.search-general__title(
      href=self.link_to('forum.topic', { section_hid: result.section.hid, topic_hid: result.topic.hid })
    )= result.topic.title

    ul.search-general__info
      li.search-general__info-item
        a.search-general__info-link(href=self.link_to('forum.section', { section_hid: result.section.hid }))= result.section.title

      //-
        li.search-general__info-item
          - var user = self.users[result.topic.cache.first_user]
          if user
            img.search-general__info-avatar(alt=user.name)&attributes(self.avatar(user, 'sm'))
            a.search-general__info-link._ucard-popover(
              href=self.link_to('users.member', { user_hid: user.hid })
              data-user-id=result.topic.cache.first_user
            )= user.nick

      li.search-general__info-item
        = self.t('replies', result.topic.cache.post_count - 1)

      li.search-general__info-item
        != self.timetag(result.topic.cache.last_ts, 'relative')
