- self.add_raw_data('forum_posts_task', self.task_info);

#rebuild-forum-posts-task.rebuild-widget
  .rebuild-widget__title
    = self.t('title')
    | 
    small(data-bind='visible: started, text: (current() / total() * 100 || 0).toFixed(2) + "%"')

  progress.progress(
    value=0
    max=100
    data-bind='value: (current() / total() * 100) || 0'
  )

  div
    button.btn.btn-secondary(
      data-on-click='admin.core.rebuild.blocks.forum_posts.start'
      data-bind='visible: !started()'
    )= self.t('start')

    button.btn.btn-danger(
      data-on-click='admin.core.rebuild.blocks.forum_posts.stop'
      data-bind='visible: started'
      style='display: none'
    )= self.t('stop')
