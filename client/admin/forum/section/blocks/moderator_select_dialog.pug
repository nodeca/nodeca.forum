form#moderator_select.modal.form-horizontal.fade(autocomplete="off", role='dialog', data-on-submit="admin.forum.section.create_moderator")
  .modal-dialog(role='document')
    .modal-content

      .modal-header
        h4.modal-title #{self.t('title')}
        button.close(type='button', aria-hidden=true, data-dismiss="modal") &times;

      .modal-body
        .form-group.row
          input(type="hidden", name="section_id", value=self.section_id)
          label.col-form-label.col-sm-2 #{self.t('nick')}
          .col-sm-10
            input.form-control(type="text", name="nick", placeholder=self.t('input_nick_placeholder'))

      .modal-footer
        button.btn.btn-light(type='button', data-dismiss="modal") #{self.t('button_cancel')}
        button.btn.btn-primary(type='submit') #{self.t('button_accept')}
