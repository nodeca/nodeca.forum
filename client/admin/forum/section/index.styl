.section-list
  list-style: none

.section-dragging
  opacity: 0.3

.section-control
  margin: 3px 0px
  padding: 5px
  background-color: #EFEFEF
  border: solid 1px #EAEAEA
  border-radius: 5px
  &:hover
    background-color: #E2E2E2

.section-drag-mark
  color: #808080
  user-select: none
  cursor: move

.section-moderators-list
  width: 200px
  text-align: right

.section-delete-button
  width: 100px
  text-align: center

.section-children
  margin-left: 50px

.section-placeholder
  margin-top: 3px
  margin-bottom: 3px
  height: 25px
  background-color: #FAFAFA
  border: dashed 2px #E8E8E8
  border-radius: 5px
  display: none

.section-placeholder-hover
  background-color: #FFFB91
  border-style: solid
  border-color: #FFF947
