@import "nodeca.core/client/common/_variables"

.aforum-index__slist
  list-style: none

.aforum-index__scontent > .aforum-index__slist
  border-left 1px solid grayLightest
  padding-left 5px
  margin-left 0

//
// Section line
//

.aforum-index__section
  padding: 5px 15px 5px 5px
  margin-bottom 3px
  background-color grayLightest
  border-radius 3px
  &:hover
    background-color grayLighter

.aforum-index__sorter
  opacity .2
  user-select: none
  cursor: move
  margin-right 7px
  &:before
    margin-right 0

.aforum-index__section-mods
  margin-left 20px

.aforum-index__section-delete
  margin-left 20px

.aforum-index__section-placeholder {
  outline: 1px dashed #4183C4;
}
