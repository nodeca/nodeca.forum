@import "nodeca.core/client/common/_variables"

.aforum-index__slist
  list-style: none

.aforum-index__scontent > .aforum-index__slist
  border-left 1px solid grayLightest
  padding-left 5px
  margin-left 0

//
// Section line
//

.aforum-index__section
  padding: 5px 15px 5px 5px
  margin-bottom 3px
  background-color grayLightest
  border-radius 3px
  &:hover
    background-color grayLighter

.aforum-index__sorter
  opacity .2
  user-select: none
  cursor: move
  margin-right 7px
  &:before
    margin-right 0

.aforum-index__section-mods
  margin-left 20px

.aforum-index__section-delete
  margin-left 20px

// Hidden placeholder for drag operations
//
.aforum-index__placeholder
  margin-top 3px
  margin-bottom 3px
  height 25px
  background-color white
  border dashed 2px grayLighter
  border-radius 2px
  display none

//
// Modifiers for drag (sort) operation
//

.aforum-index__placeholder._hovered
  border-style solid

.aforum-index__slist-item._dragged
  opacity: 0.5

//.aforum-index__scontent
//  posision relative

.aforum-index__scontent .ui-draggable-dragging
  width 50%
