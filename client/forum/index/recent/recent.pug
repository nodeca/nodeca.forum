- self.add_raw_data('mark_cut_ts', self.mark_cut_ts)

article#content.forum-index-recent
  != self.partial('@common.blocks.navbar.logo_apps', { search_tab: 'forum_topics' })
  != self.partial('@common.blocks.navbar.alt_logo_apps', { extra_buttons: 'forum.index.recent.blocks.page_actions' })

  nav.breadcrumbs-container
    .layout__container.container-fluid
      != self.partial('@common.blocks.breadcrumbs')

  .layout__container.container-fluid
    != self.partial('@common.blocks.announces')

    header.page-head
      .float-end
        != self.partial('@forum.index.recent.blocks.page_actions')
      h1.page-head__title(itemprop='name')= self.t('title')

    if self.topics && self.topics.length
      .forum-topiclist
        != self.partial('blocks.topics_list')
    else
      p.forum-index-recent__notopics
        != self.t('no_topics')
