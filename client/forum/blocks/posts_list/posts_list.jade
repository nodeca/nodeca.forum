- var status = { topic: { OPEN: 1, CLOSED: 2, PINNED: 3, PENDING: 4, DELETED: 5, DELETED_HARD: 6, HB: 7 }, post: { VISIBLE: 1, HB: 2, PENDING: 3, DELETED: 4, DELETED_HARD: 5 } }

- if (self.show_page_number)
  .forum-postlist__separator= self.t('page_separator', { page: self.show_page_number })

- each post in self.posts
  article.forum-post.clearfix(id='post#{post._id}', itemscope, itemtype='http://schema.org/WebPageElement')
    footer.forum-post__meta.clearfix
      .forum-post__meta-blk.pull-right
        time.forum-post__time(itemprop='datePublished', datetime=self.date(post.ts, 'iso')) #{self.date(post.ts, 'date')}
        - var _post_anchor = self.link_to('forum.topic', { hid: self.topic.hid, section_hid: self.section.hid }) + '#post' + String(post._id);
        a.forum-post__link.icon-link(href=_post_anchor)
        input.forum-post__check(type='checkbox')
      .forum-post__meta-blk.pull-left
        - if (self.users[post.user])
          a.forum-post__author._ucard-popover(
            href=self.link_to('users.member', self.users[post.user]),
            data-user-id=String(post.user)) #{self.users[post.user]._uname}
    .forum-post__aside
      - if (self.users[post.user])
        a.forum-post__userpic(href='#')
          img.av-l(alt='#{self.users[post.user]._uname}',src='http://lorempixel.com/150/150/sports/a' + '#{self.users[post.user].id}' + '/')
      - else
        .av-l
    .forum-post__content
      .forum-post__message !{post.text}
      footer.forum-post__controls.clearfix
        ul.forum-post__controls-blk.pull-left
          li.forum-post__control-item
            a.forum-post__action-link(href='#')= self.t('report')
          li.forum-post__control-item
            a.forum-post__action-link(href='#')= self.t('ip_show')
        ul.forum-post__controls-blk.pull-right
          - if (self.settings.forum_can_reply && (self.topic.st === status.topic.OPEN || self.topic.st === status.topic.OPEN))
            li.forum-post__control-item
              a.forum-post__action-link.icon-reply(href='#',data-on-click="forum.post.reply",data-post-id='#{post._id}')= self.t('reply')
          li.forum-post__control-item
            a.forum-post__action-link(href='#',data-on-click="forum.post.edit",data-post-id='#{post._id}')= self.t('edit')
          li.forum-post__control-item
            a.forum-post__action-link(href='#')= self.t('delete')
          li.forum-post__control-item
            a.forum-post__vote-down.icon-vote-down(href='#')
            span.forum-post__vote-count +47
            a.forum-post__vote-up.icon-vote-up(href='#')
