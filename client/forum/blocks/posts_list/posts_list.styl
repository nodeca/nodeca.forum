// Forum posts list. Used in forum `topic` page
//

@import "nodeca.core/client/common/_variables"


// pages separator
.forum-postlist__separator
  font-family sansWideFontFamily
  font-size 10px
  font-weight bold
  padding 0 5px
  border-bottom 1px solid grayLighter
  margin-bottom (baseLineHeight/4)



// Post styles

.forum-post
  margin-bottom baseLineHeight

.forum-post__m-deleted
  background grayLightest

.forum-post__m-hb
  background grayLightest

.forum-post__m-deleted-hard
  background grayLightest

//
// header
//

.forum-post__meta
  background-color lighten(grayLightest, 70%)
  border 1px solid grayLightest
  border-radius 2px
  box-shadow 0 0 2px #f8f8f8
  padding 5px 15px
  margin-bottom:10px

.forum-post__meta-blk
  font-size 11px
  color gray
  height 20px
  line-height 20px

.forum-post__author
  color gray
  font-size 16px

.forum-post__link
  margin-left 1em
  font-size 14px
  &:before
    margin 0
    font-size 100%

.forum-post__check
  margin 0 0 0 1em !important
  vertical-align text-top

//
// left / right columns
//

asideSize = '$$ N.config.users.avatars.resize.md.height $$'px
asideSizeSm = 50px

.forum-post__aside
  float left
  margin-top 5px
  .av-l
    width asideSize
    height asideSize

.forum-post__content
  font-family sansWideFontFamily
  margin-right 10px
  margin-left asideSize + 15px

@media (max-width: screenXs - 1)
  .forum-post__aside
    .av-l
      width asideSizeSm
      height asideSizeSm
  .forum-post__content
    margin-left asideSizeSm + 15px

//
// content column
//

.forum-post__message
  min-height 60px

.forum-post__controls
  margin-top 10px

.forum-post__controls-blk
  margin 0
  padding 0
  list-style none

.forum-post__control-item
  display inline-block
  margin-right: 0px
  &:last-child
    margin-right: 0

.forum-post__action
  background-color white
  color gray

  &:hover
  &:focus
  &:active
    background-color grayLightest

  .icon:before
    font-size 120%
    top 1px

.forum-post__reply
  .forum-post__action
    color #428bca

  .short
    display none

@media (max-width: screenSm - 1)
  .forum-post__reply
    .full
      display none
    .short
      display inline-block

// Flip moderator menu to left if < 3 buttons at rignt side
// http://alistapart.com/article/quantity-queries-for-css
li.forum-post__mod-menu:nth-last-child(-n + 4)
  .dropdown-menu
    left auto
    right 0

//
// Hovering magick
//

.forum-post
  .forum-post__action
    transition opacity .3s ease
    opacity .2
  &:hover
    .forum-post__action
      opacity 1

//
// Actions states
//
.forum-post__bookmark-remove
  display none

.forum-post__m-bookmarked
  .forum-post__bookmark-remove
    display inline-block
    opacity 1
    .icon
      color red
  .forum-post__bookmark-add
    display none

.forum-post__undelete
  display none

.forum-post__m-deleted
.forum-post__m-deleted-hard

  .forum-post__undelete
    display block

  .forum-post__edit
  .forum-post__delete
  .forum-post__reply
    display none

.forum-post__m-voted-up
  .forum-post__vote-up
    .forum-post__action
      opacity 1
    .icon
      color green

.forum-post__m-voted-down
  .forum-post__vote-down
    .forum-post__action
      opacity 1
    .icon
      color red

.forum-post__bookmarks-count:after
  content attr(data-bm-count)
  margin-left .2em

.forum-post__bookmarks-count[data-bm-count="0"]:after
  display none

.forum-post__votes
  .forum-post__action:after
    content attr(data-votes-count)
  .forum-post__action[data-votes-count="0"]
    display none
