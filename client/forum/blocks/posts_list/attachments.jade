if self.post.attach_tail && self.post.attach_tail.length
  ul.thumb-grid.thumb-grid__m-responsive.thumb-grid__m-tight
    each media in self.post.attach_tail
      - var href = self.link_to('users.media', { user_hid: self.user.hid, media_id: media.media_id })

      li.thumb-grid__item

        if media.type === 'image'
          - var imageUrl = self.link_to('core.gridfs', { bucket: media.media_id + '_sm' })
          a.thumb(href=href)
            img.thumb__image(src=imageUrl)

        else if media.type === 'medialink'
          .thumb
            a.thumb__inner(href=href)
              .thumb__icon.icon.icon-video
              img.thumb__image(src=media.medialink_data.thumb)

        else if media.type === 'binary'
          a.thumb(href=href)
            .thumb__icon.icon.icon-binary
            .thumb__content= media.file_name
