// Forum topics list. Used on forum `section` page
//

@import "nodeca.core/client/common/_variables"

// pages separator
.forum-topicline__separator
  font-family sansWideFontFamily
  border-bottom 1px solid grayLighter
  font-size 10px
  font-weight bold
  padding 0

//
// Topics lines
//

.forum-topicline
  font-family sansWideFontFamily
  padding 10px 0
  border-top 1px solid grayLightest
  // hide border on first item
  &:first-child
    border 0
// hide border on item after page separator
.forum-topicline__separator + .forum-topicline
  border-top: 0


//
// First column 
//

.forum-topicline__summary
  padding-left 20px
  box-sizing border-box

.forum-topicline__title
  position relative
  font-size 18px
  font-weight normal
  line-height (baseLineHeight*5/4)
  display inline-block
  margin 0 .7em 0 0

.forum-topicline__title-link
  color grayDark
  &:hover
    color linkColorHover

.forum-topicline__meta
  margin-left 10px
  font-size 11px
  line-height (baseLineHeight*3/4)

a.forum-topicline__author
  color grayLight
  &:hover
    color linkColorHover

.forum-topicline__time
  font-style italic
  margin-left 1em
  color grayLight

//
// Second column (topics/posts counters)
//

.forum-topicline__counters
  list-style none
  font-size 13px
  color gray
  margin-bottom 0

.forum-topicline__counter-item
  text-align right
  padding-right 0.5em
  line-height baseLineHeight
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

.forum-topicline__counter-val
  margin-right .2em

//
// Last column (latest post info)
//

.forum-topicline__lpost
  list-style none
  font-size 11px

.forum-topicline__lpost-user
.forum-topicline__lpost-time
  line-height (baseLineHeight*3/4)
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

a.forum-topicline__lpost-time-link
  color grayLight

a.forum-topicline__lpost-user-link
  color gray


// Markers
//
.unread
  .forum-topicline__summary
    padding-left 35px
  .forum-topicline__title
    font-weight bold
    &:before
      content ''
      position absolute
      left -15px
      top 3px
      height 19px
      background-color colorUnread
      width 7px

.forum-topicline__summary .icon-closed
  display inline-block
  &:before
    margin-right 0
    margin-left .2em
    font-size 90%
    opacity .3