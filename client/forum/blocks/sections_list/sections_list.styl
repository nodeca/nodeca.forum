// Forum sections list. Used on forum `index` & forum `section` page
//

@import "nodeca.core/client/common/_variables"

.forum-sections
  font-family sansWideFontFamily
  margin 0
  padding 0
  list-style none
  border-top 1px solid grayLightest

.forum-section
  padding (baseLineHeight / 2) 0
  border-bottom 1px solid grayLightest
  // for link overlay
  position relative

//
// first (main) column
//

.forum-section__summary
  padding-left 20px
  padding-right 20px
  overflow hidden
  position relative

.forum-section__unread-marker
  position absolute
  left 5px
  top 50%
  line-height 0
  width 1px
  height 20px
  margin-top -10px
  background-color grayLighter

.forum-section__title
  position relative
  font-weight normal
  font-size 18px
  line-height inherit
  margin-top 0
  margin-bottom 0

  @media (max-width: screenSm - 1)
    font-size 16px

.forum-section__title-link
  color grayDark
  display inline-block
  width 100%
  &:hover
    color linkColorHover

// -- subforums list
.forum-section__subforums
  position relative
  font-size 12px
  margin-left .7em
  padding 0
  color grayLight
  &:before
    content 'â•° '

.forum-section__subforum-item
  display inline-block
  //line-height (baseLineHeight*3/4)
  &:after
    content: ",";
    margin-right: 0.5em;
  &:last-child:after
    content: "";

a.forum-section__subforum-link
  color grayLight
  &:hover
    color linkColorHover

// -- moderators list
.forum-section__moderators
  font-size 11px
  margin 0 0 0 .7em
  color grayLight

.forum-section__moderators-caption
  display inline-block
  font-weight normal
  &:after
    content ':'

.forum-section__moderator
  display inline-block
  margin-left .3em
  &:after
    content ','
  &:last-child:after
    content ""

a.forum-section__moderator-link
  color inherit
  &:hover
    color linkColorHover

.forum-section__microstat
  font-size 11px
  margin-left .7em
  color grayLight
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

.forum-section__enter
  position absolute
  right 0
  top 50%
  height 100%
  width 20px
  text-align center
  color grayLight
  &:before
    margin-right 0
    height 100%
    vertical-align middle
    font-size 18px
    line-height 0

// Enabled only for small screens
.forum-section__overlay
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  z-index 10
  &:focus
    opacity .1
    background-color grayLighter
  &:hover
    opacity .1
    background-color grayLighter

//
// Second column (topics/posts counters)
//

.forum-section__counters
  padding 0
  list-style none
  font-size 12px
  color gray

.forum-section__counter-item
  text-align right
  padding-right .5em
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

//
// Last column (latest post info)
//

.forum-section__lpost
  padding 0
  list-style none
  font-size 12px

.forum-section__lpost-title
.forum-section__lpost-user
.forum-section__lpost-time
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

a.forum-section__lpost-title-link
  color grayLight

.forum-section__lpost-user
a.forum-section__lpost-user-link
  color gray

.forum-section__lpost-time
  color grayLight
  //padding-left 0.5em
  text-align right
  padding-right 0.5em

//
// Markers
//
////////////////////////////////////////////////

.unread .forum-section__unread-marker
  background-color colorUnread
  width 2px
