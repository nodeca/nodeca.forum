// Forum sections list. Used on forum `index` & forum `section` page
//

@import "nodeca.core/client/common/_variables"

.forum-sections
  display table
  margin 0
  padding 0
  border-top 1px solid grayLightest
  width 100%

.forum-section
  display table-row
  padding (baseLineHeight / 2) 0
  border-bottom 1px solid grayLightest
  // for link overlay
  position relative

.forum-section__cell
  display table-cell
  padding-top 10px
  padding-bottom 10px

.forum-section__stats
  width 100px
  text-align right

//
// first (main) column
//

.forum-section__summary
  padding-left 20px
  padding-right 20px
  position relative
  width auto

.forum-section__title
  font-family sansWideFontFamily
  position relative
  font-weight normal
  font-size $font-size-base
  line-height inherit
  margin-top 0
  margin-bottom 0

.forum-section__title-link
  color $body-color
  display inline-block
  width 100%
  &:hover
    color linkColorHover

// -- subforums list
.forum-section__subforums
  position relative
  font-size 12px
  margin-left .7em
  padding 0
  color $body-color-secondary
  &:before
    content 'â•° '

.forum-section__subforum-item
  display inline-block
  //line-height (baseLineHeight*3/4)
  &:after
    content: ",";
    margin-right: 0.5em;
  &:last-child:after
    content: "";

a.forum-section__subforum-link
  color $body-color-secondary
  &:hover
    color linkColorHover

.forum-section__microstat
  font-size 11px
  color $body-color-secondary
  shortable()

.forum-section__enter
  position absolute
  right 0
  top 50%
  height 100%
  width 20px
  text-align center
  color $body-color-secondary
  &:before
    margin-right 0
    height 100%
    vertical-align middle
    font-size 18px
    line-height 0

// Enabled only for small screens
.forum-section__overlay
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  z-index 10
  &:focus
    opacity .1
    background-color grayLighter
  &:hover
    opacity .1
    background-color grayLighter

//
// Second column (topics/posts counters)
//

.forum-section__counters
  padding 0
  list-style none
  font-size 12px
  color gray

.forum-section__counter-item
  text-align right
  padding-right .5em
  shortable()

//
// Last column (latest post info)
//

.forum-section__lpost
  padding 0
  list-style none
  font-size 12px

.forum-section__lpost-title
.forum-section__lpost-user
.forum-section__lpost-time
  shortable()

a.forum-section__lpost-title-link
  color grayLight

.forum-section__lpost-user
a.forum-section__lpost-user-link
  color gray

.forum-section__lpost-time
  color grayLight
  //padding-left 0.5em
  text-align right
  padding-right 0.5em

@keyframes forum-section-flash-animation {
  from  { background: #bbeeff;  }
  to    { background: none; }
}

.forum-section.forum-section__m-highlight
  animation forum-section-flash-animation 3s
  border-left 1px solid #428bca
