- var subscriptionTypes = '$$ JSON.stringify(N.models.users.Subscription.types) $$'

- var icon;
- var text;

if (self.subscription === subscriptionTypes.MUTED)
  - icon = 'icon-track-muted'
  - text = self.t('muted')
else if (self.subscription === subscriptionTypes.TRACKING)
  - icon = 'icon-track-tracking'
  - text = self.t('tracking')
else if (self.subscription === subscriptionTypes.WATCHING)
  - icon = 'icon-track-watching'
  - text = self.t('watching')
else
  - icon = 'icon-track-normal'
  - text = self.t('normal')

button.btn.btn-secondary(data-on-click='forum.topic.unsubscribe:edit' data-hid=self.topic.hid data-subscription=self.subscription)
  span.icon(class=icon)
  = ' '
  = text
