@import "nodeca.core/client/common/_variables"

//
// Responsive popover
//

.forum-topic-root .votes-popover
  max-width 250px

@media (min-width: screenXs)
  .forum-topic-root .votes-popover
    max-width 400px

@media (min-width: screenSm)
  .forum-topic-root .votes-popover
    max-width 600px

//

.forum-postlist
  margin-top 10px

.forum-topic-title__meta-deleted
  color grayLight
  font-size 12px

.forum-topic-title__edit
  color gray
  opacity .3
  transition opacity .3s ease
  &:hover
    opacity 1

.forum-topic__closed-mark
  display none

.forum-topic-title__edit
  display none

.forum-topic-root__m-open
  .forum-topic-title__edit
    display inline

.forum-topic-root__m-closed
  .forum-topic__closed-mark
    display inline-block

  .forum-topic-menu__reply
    display none

  .forum-post__reply
    display none

.forum-topic-root__m-deleted
.forum-topic-root__m-deleted-hard
  .forum-topic-title__text
    text-decoration line-through

  .forum-topic-menu__reply
    display none

  .forum-post__reply
    display none

  .forum-post__votes
  .forum-post__vote-up
  .forum-post__vote-down
  .forum-post__bookmark
    display none


// TODO: move to separate block when menu complete
.forum-topic__tracking
  margin-top baseLineHeight
  shortable()

.forum-topic__tracking-btn
  margin-right .5em
