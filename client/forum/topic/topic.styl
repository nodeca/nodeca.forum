@import "nodeca.core/client/common/_variables"

//
// Responsive popover
//

.forum-topic-root .votes-popover
  max-width 250px

@media (min-width: screenXs)
  .forum-topic-root .votes-popover
    max-width 400px

@media (min-width: screenSm)
  .forum-topic-root .votes-popover
    max-width 600px

//

.forum-topic-title__edit
  display none
  font-size $font-size-base
  color $body-color-secondary
  vertical-align middle
  padding .25rem .5rem

.forum-topic__closed-mark
  display none

.forum-topic-root__m-open
  .forum-topic-title__edit
    display inline-block

.forum-topic-root__m-closed
  .forum-topic__closed-mark
    display inline-block

  .forum-post__reply
    display none

.forum-topic-root__m-deleted
.forum-topic-root__m-deleted-hard
  .forum-topic-title__text
    text-decoration line-through

  .forum-post__reply
    display none

  .forum-post__votes
  .forum-post__vote-up
  .forum-post__vote-down
  .forum-post__bookmark
    display none


// Only show this paginator when javascript is disabled
.forum-topic__footer-pagination
  text-align center
  display none

.no-js .forum-topic__footer-pagination
  display block


// TODO: move to separate block when menu complete
.forum-topic__tracking
  margin-top baseLineHeight
  shortable()
