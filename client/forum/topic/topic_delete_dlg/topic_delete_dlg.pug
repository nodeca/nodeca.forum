.modal.fade(tabindex='-1' role='dialog' aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content
      form(data-on-submit='forum.topic.topic_delete_dlg:submit')
        .modal-header
          h4.modal-title=self.asModerator ? self.t('title_moderator') : self.t('title')
          button.btn-close(type='button' tabindex='-1' data-bs-dismiss='modal')
        .modal-body
          p.text-danger=self.t('confirmation_text')
          .form-group
            input.form-control(type='text' name='reason' tabindex='1' placeholder=self.t('reason_input_help'))
          if self.asModerator && self.canDeleteHard
            .form-group
              .form-check
                label.form-check-label
                  input.form-check-input(type='radio' name='method' tabindex='2' value='soft' checked=true)
                  = ' ' + self.t('delete_soft')
              .form-check
                label.form-check-label
                  input.form-check-input(type='radio' name='method' tabindex='3' value='hard')
                  = ' ' + self.t('delete_hard')
        .modal-footer
          button.btn.btn-secondary(type='button' tabindex='4' data-bs-dismiss='modal')=self.t('cancel')
          button.btn.btn-danger(type='submit' tabindex='5')=self.t('ok')
