@import '../common/variables.styl'

.fl-category
  margin-bottom baseLineHeight

  & > header
    border-bottom 2px solid grayLighter
    margin-bottom (baseLineHeight/2)

    & > h2
      display inline-block
      font-weight normal
      font-style italic
      color grayLight

.fl-cat-list
  margin 0
  list-style none

  & > li
    padding 10px 0
    border-bottom 1px solid grayLightest
    min-height 50px

    &:last-child
      border 0

.fl-item-summary
  padding-left baseLineHeight*1.5
  -moz-box-sizing border-box
  box-sizing border-box

  & > h3
    position relative
    font-weight normal

    &:before
      content ''

      position absolute
      left -20px
      top baseLineHeight*.25

      height baseLineHeight
      width 6px
      background-color grayLighter

    & > a
      color grayDark

.unread > div > .fl-item-summary > h3:before
  background-color colorUnread

.fl-item-counters
.fl-item-lastpost
  color #800