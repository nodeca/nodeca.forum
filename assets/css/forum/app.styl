@import 'nib'

@import '../common/variables.styl'

@import 'sections.styl'
@import 'threads.styl'
@import 'posts.styl'

@import 'responsive.styl'


.av-s
  border-radius 2px
  height 30px
  width 30px
.av-m
  border-radius 3px
  height 50px
  width 50px
.av-ml
  border-radius: 3px
  height 70px
  width 70px
.av-l
  border-radius 3px
  height 100px
  width 100px
.av-xl
  border-radius 4px
  height 150px
  width: 150px
.av-xxl
  border-radius: 3px
  box-shadow 0 0 1px grayDark
  height: 200px
  width: 200px

.vote-up:before
  margin-left 0
  margin-right .1em
  color #080
  content '\2b06'
.vote-down:before
  margin-left .1em
  margin-right 0
  color #c00
  content '\2b07'