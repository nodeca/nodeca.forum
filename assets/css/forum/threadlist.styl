//
// Topics list
//
////////////////////////////////////////

.tl-thread-list
  font-family sansWideFontFamily
  margin 0
  list-style none
  > li
    padding 15px 0
    border-bottom 1px solid grayLightest
    //min-height 40px
    &:last-child
      border 0

//
// Thread name/meta
//

.tl-item-summary
  padding-left 5px
  box-sizing border-box
  > h2
    position relative
    font-size 16px
    font-weight normal
    line-height 1.1em
    display inline-block
    margin-right .7em
    > a
      color grayDark
      &:hover
        color linkColorHover
  > .tl-pages
    display inline-block

