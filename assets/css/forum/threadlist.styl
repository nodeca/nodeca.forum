//
.tl-meta
  color grayLight
  margin-left 10px
  font-size 11px
  line-height 1.1em
  > a
    color grayLight
    &:hover
      color linkColorHover
  > time
    font-style italic
    margin-left 1em

.tl-item-summary
  > .tl-meta > a.tl-preview-ctl
    transition opacity 0.3s ease
    float right
    color gray
    opacity 0
  &:hover > .tl-meta > a.tl-preview-ctl
    opacity 1

//
// topics/posts counters
//

.tl-item-counters
  list-style none
  color gray
  font-size 13px
  > li
    line-height 1.2em

//
// last post info
//

.tl-item-lastpost
  list-style none
  font-size 11px
  > li
    line-height 1.4em
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
  > .lastpost-time > a
    color grayLight
  > .lastpost-user > a
    color gray

//
// Markers
//
////////////////////////////////////////////////

.unread > .tl-item-summary
  padding-left 20px
  > h2
    font-weight bold
    &:before
      content ''
      position absolute
      left -15px
      top 0
      height 1.1em
      background-color colorUnread
      width 7px
