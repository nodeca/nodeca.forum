//
// Forum Index styles 
//

.fl-category
  margin-bottom baseLineHeight
  > header
    border-bottom 2px solid grayLighter
    > h2
      font-weight normal
      font-style italic
      color grayLight
      margin 0
      > a
        color grayLight
        text-decoration none

//
// Categories collapsers/states
//

.fl-category > header
  > h2 > .icon-collapse
    margin-left .3em
    &:before
      font-size 100%

  &:not(:hover) > h2 > .icon-collapse
    opacity 0
    transition opacity .3s ease-in-out

.fl-category.collapsed > header
  transition opacity .3s ease
  opacity .2
  &:hover
    opacity .7


//
// Subsections list
//
////////////////////////////////////////

.fl-cat-list
  font-family sansWideFontFamily
  margin 0
  list-style none
  > li
    padding 15px 0
    border-bottom 1px solid grayLightest
    //min-height 40px
    &:last-child
      border 0

.forum-threadlist .fl-cat-list
  border-top 1px solid grayLightest
  margin-bottom 50px
  

//
// subsection name
//

.fl-item-summary
  padding-left 2em
  box-sizing border-box
  // IE7 hack - no :before & box-sizing
  *padding-left 0

  > h3
    position relative
    font-weight normal
    margin-top 0
    margin-bottom (baseLineHeight/4)
    &:before
      content ''
      position absolute
      left -20px
      top 0
      height baseLineHeight
      width 4px
      background-color grayLighter
    > a
      color grayDark
      &:hover
        color linkColorHover

// Moderators list
.fl-moderators
  font-size 11px
  margin-left .7em
  color grayLight
  line-height 1.2em
  > dt, dd
    line-height 1.2em
  > dt:after
    content ':'
  > dd > a
    color grayLight
    &:hover
      color linkColorHover

// Subsections list
.fl-subsections
  position relative
  font-size 12px
  margin-left 1.5em
  color grayLight
  line-height 1.2em
  margin-bottom (baseLineHeight/4)
  > li
    line-height 1.2em
    > a
      font-weight: bold
      color grayLight
      &:hover
        color linkColorHover
  &:before
    content 'â•° '
    position absolute
    top 0
    left -1em

//
// topics/posts counters
//

.fl-item-counters
  list-style none
  color gray
  font-size 13px
  > li
    line-height 1.2em

//
// last post info
//

.fl-item-lastpost
  list-style none
  font-size 11px
  > li
    line-height 1.4em
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
  > .lastpost-title > a
    color grayLight
  > .lastpost-user
  > .lastpost-user > a
    color gray
  > .lastpost-time
    font-size 9px
    color grayLight
    padding-left 0.3em

//
// Markers
//
////////////////////////////////////////////////

.unread > .fl-item-summary > h3:before
  background-color colorUnread
  width 6px
