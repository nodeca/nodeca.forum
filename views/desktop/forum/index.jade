article
  include ../widgets/breadcrumbs

  //h1= t('forum.index.title')

  - each category in sections
    article.fl-category(id='cat_box_#{category.id}', name=category.id)
      header
        h2(name=category.title)
          a(href='##{category.id}', data-toggle='collapse', data-target='#cat_list_#{category.id}')= category.title
        a._collapser(href='#')

      ul.fl-cat-list(id='cat_list_#{category.id}', data-notify='#cat_box_#{category.id}').collapse.in

        - each forum in category.child_list
          - last_thread = forum.last_thread
          li
            // Add 'unread' class & #id below, for new data
            .row
              .span7.fl-item-summary
                h3
                  a(href=link_to('forum.section', forum))= forum.title

                - if (forum.child_list.length > 0)
                  ul.hlist.fl-subsections
                    - each sub_forum in forum.child_list
                      li
                        a(href=link_to('forum.section', sub_forum))= sub_forum.title

                - if (forum.moderators.length > 0)
                  dl.def-hlist.fl-moderators
                    dt moderators:
                      - each moderator in forum.moderators
                        dd
                          a(href=link_to('users.member', users[moderator])) #{users[moderator].login} 

              ul.span2.fl-item-counters.hidden-phone
                li
                  strong #{forum.thread_count}
                  |  topics
                li 
                  strong #{forum.post_count}
                  |  posts
              
              ul.span3.fl-item-lastpost.hidden-phone
                li.lastpost-title
                  a(href=link_to('forum.thread', last_thread) +'#'+last_thread.post_id) #{forum.last_thread.title}
                li.lastpost-user
                  | by 
                  - lp_user = users[last_thread.user]
                  a(href=link_to('users.member', lp_user)) #{lp_user.login} 
                li.lastpost-time
                  time(date-time=last_thread.ts.valueOf()) #{last_thread.ts.toLocaleDateString()}

